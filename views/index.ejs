<%- include('./partials/header') %>

<h2>Home Page</h2>

<% if (!user) { %>
	<p>please login to continue</p>
	<img src="<%= hero %>" alt="hero image">
<% } else { %>
	<p>Welcome, <%= user.name %> <%= user.email %></p>
	<% if (user.avatar) { %>
		<img src="<%= user.avatar %>" alt="<%= user.name %>'s avatar" />
	<% } %>
<% } %>
<%- include('./partials/footer') %>
